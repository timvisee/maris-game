extends ../../base/page

block content
    //- Print the status message
    p: +format(message)

    br
    .button-list
        //- Show the back button
        unless hideBackButton
            a.ui-btn.ui-btn-raised.clr-primary(href='/', data-rel='back', data-direction='reverse', title='Ga terug')
                i.zmdi.zmdi-arrow-back.ui-pull-left
                | &nbsp;&nbsp;Ga terug

        //- Show the submission view button
        unless submission.id === null
            a.ui-btn(href='/game/' + game.id + '/submission/' + submission.id, title='Inzending bekijken')
                i.zmdi.zmdi-zoom-in
                | &nbsp;&nbsp;Inzending bekijken
        a.ui-btn.wow.fadeInUp(href='/game/' + game.id, data-wow-delay=(fadeDelay += 0.1) + 's', title='Speloverzicht')
            i.zmdi.zmdi-home
            | &nbsp;&nbsp;Speloverzicht

