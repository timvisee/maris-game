extends ../../base/page

block content
    div(align="center")
        table.table-list.ui-responsive
            tr: td Naam
                td= assignment.name
            tr: td Opdracht
                td
        p(style='border: 1px darkgray solid; padding: 8px')= assignment.description
        table.table-list.ui-responsive
            tr: td Pogingen
                if assignment.retry
                    td Onbeperkt
                else
                    td 1x
            tr: td Punten
                td= assignment.points
            tr: td Antwoord
                td
                    if assignment.answer_text
                        span(style='color: green;') Ja
                    else
                        span(style='color: red;') Nee
            tr: td Bestand
                td
                    if assignment.answer_file
                        span(style='color: green;') Ja
                    else
                        span(style='color: red;') Nee

    br
    .button-list
        a.ui-btn(href=page.url + '/edit', title='Opdracht aanpassen')
            i.zmdi.zmdi-edit
            | &nbsp;&nbsp;Opdracht aanpassen
        a.ui-btn.clr-warning(href=page.url + '/delete', title='Opdracht verwijderen')
            i.zmdi.zmdi-delete
            | &nbsp;&nbsp;Opdracht verwijderen
        a.ui-btn(href='/game/' + game.id + '/assignments', title='Opdrachtenoverzicht')
            i.zmdi.zmdi-comment-edit
            | &nbsp;&nbsp;Opdrachtenoverzicht
